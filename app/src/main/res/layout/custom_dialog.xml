<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/credit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/advance_name"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/blue_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@drawable/blue_credit"
                android:gravity="center"
                android:minEms="2"
                android:padding="1dp"
                android:text="0"
                android:textSize="10sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/green_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@drawable/green_credit"
                android:gravity="center"
                android:minEms="2"
                android:padding="1dp"
                android:text="0"
                android:textSize="10sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/orange_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@drawable/orange_credit"
                android:gravity="center"
                android:minEms="2"
                android:padding="1dp"
                android:text="0"
                android:textSize="10sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/red_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@drawable/red_credit"
                android:gravity="center"
                android:minEms="2"
                android:padding="1dp"
                android:text="0"
                android:textSize="10sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/yellow_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="@drawable/yellow_credit"
                android:gravity="center"
                android:minEms="2"
                android:padding="1dp"
                android:text="0"
                android:textSize="10sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/credit_layout"
            android:padding="10dp"
            android:text="Description"/>

        <TextView
            android:id="@+id/dialog_special"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_description"
            android:padding="10dp"
            android:text=""/>

        <TextView
            android:id="@+id/dialog_bonus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_special"
            android:padding="10dp"
            android:text=""/>

        <TextView
            android:id="@+id/calamityList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_bonus"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/dialog_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calamityList"
            android:padding="10dp"
            android:text=""
            android:textStyle="bold"/>

    </RelativeLayout>
</ScrollView>